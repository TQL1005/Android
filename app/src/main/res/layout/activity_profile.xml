<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile"
    android:background="#E0FFFF">

    <!-- Profile Detail Section -->
    <LinearLayout
        android:id="@+id/detail_profile"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:orientation="horizontal"
        android:background="#60A3D9"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:text="Ha Van Long" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="20dp"
            android:src="@drawable/search__view_bg"
            tools:srcCompat="@tools:sample/avatars"/>
<!--            android:scaleType="centerCrop" -->
        <Button
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="←"
            android:textSize="35sp"
            android:textColor="#000000"
            android:background="?android:attr/selectableItemBackground"
            />

    </LinearLayout>

    <!-- Menu Options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_profile"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7EC8E3"
            android:text="Change Password"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/my_booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7EC8E3"
            android:text="My Booking"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/Feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7EC8E3"
            android:text="Feedback"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/customer_support"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7EC8E3"
            android:text="Customer Support"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/follow_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7EC8E3"
            android:text="Follow Us"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/terms_amp_conditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7EC8E3"
            android:text="@string/terms_amp_conditions"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/Logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7EC8E3"
            android:text="Logout"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/adminbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7EC8E3"
            android:text="Admin View"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

</RelativeLayout>
