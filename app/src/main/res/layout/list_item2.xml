<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_border"
    android:padding="16dp"
    >

    <ImageView
        android:id="@+id/imageView4z"
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/imageView4z"
        android:layout_margin="10dp"
        >

        <TextView
            android:id="@+id/destinationz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="destination"
            android:textStyle="bold|italic"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/descriptionz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/amountz"
            android:text="description"
            android:layout_marginTop="7dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/pricez"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/destinationz"
            android:text="price"
            android:layout_marginTop="7dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/amountz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pricez"
            android:text="amount"
            android:layout_marginTop="7dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/start_datez"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/descriptionz"
            android:layout_marginTop="5dp"
            android:text="start_date"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/end_datez"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/descriptionz"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:text="end_date"
            android:textStyle="bold"
            android:layout_toRightOf="@id/start_datez"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />
    </RelativeLayout>


</RelativeLayout>



